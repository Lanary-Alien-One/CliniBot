# /etc/nginx/sites-available/clinicool
# Sustituye 'clinicool.es' por tu dominio real

server {
    listen 80;
    server_name clinicool.es www.clinicool.es;

    # Frontend (Next.js)
    location / {
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }

    # Backend API (Node.js)
    location /api {
        proxy_pass http://localhost:3001;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }

    # Backend Static Files (Optional, if needed)
    location /uploads {
        proxy_pass http://localhost:3001;
    }
}
